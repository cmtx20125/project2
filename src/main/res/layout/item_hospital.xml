<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#f9fafa"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/yulequan_attch_image"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="170dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/guide_image"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:background="#333333"
                    android:src="@drawable/dog"
                    android:scaleType="centerCrop"
                    android:visibility="visible" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/guide_message"
                android:layout_width="wrap_content"
                android:padding="10dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:focusable="false"
                android:lineSpacingExtra="2.5dp"
                android:text="我们此时说不定就是别人照片里面的风景.我们此时说不定就是别人照片里面的风景."
                android:textColor="@color/yulequan_item_uname"
                android:textSize="13dp" />
            <TextView
                android:id="@+id/guide_title"
                android:layout_width="fill_parent"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_1"
                android:ellipsize="end"
                android:focusable="false"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="作者：冬雪如约而至"
                android:textColor="@color/yulequan_item_title"
                android:textSize="@dimen/dp_15" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>